{
    "env": {
        "browser": true,
        "es2021": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/display-name": "off" ,
        "quotes":["warn","single"],
        "no-console":"warn",
        "semi": ["warn", "always"],
        "indent": [2, "tab", { 
            "ignoredNodes": [
                "TemplateLiteral", 
                "ConditionalExpression"] 
          }],
        "no-mixed-spaces-and-tabs":"warn"
        // "template-curly-spacing":"warn"
    // we use 2 spaces to indent our code
        // "indent": ["warn", 2]
    // we want to avoid extraneous spaces
        // "no-multi-spaces": ["warn"]
    }
}

